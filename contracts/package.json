{
  "name": "@mintmarks/contracts",
  "version": "1.0.0",
  "description": "Mintmarks smart contracts",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "forge build",
    "test": "forge test -vv",
    "deploy": "forge script script/Deploy.s.sol:DeployScript --rpc-url $CELO_SEPOLIA_RPC_URL --broadcast",
    "mint": "forge script script/Mint.s.sol:MintScript --rpc-url $CELO_SEPOLIA_RPC_URL --broadcast",
    "mint:preview": "node script/mint.js",
    "flatten": "forge flatten src/Mintmarks.sol -o Mintmarks-flattened.sol"
  }
}
